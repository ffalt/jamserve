{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "module": "esnext",
    "rootDir": "./"
  },
  "include": [
    "*.js",
    "src/**/*.test.ts",
    "src/**/*",
    "config/*.js"
  ],
  "exclude": [
    "bin",
    "data",
    "dist",
    "temp",
    "specs",
    "local",
    "static",
    ".git",
    ".idea"
  ]
}
