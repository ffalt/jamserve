{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "types": [
      "node",
      "jest"
    ],
    "rootDir": "./"
  },
  "include": [
    "*.js",
    "src/**/*",
    "config/*.js"
  ],
  "exclude": [
    "bin",
    "data",
    "dist",
    "temp",
    "specs",
    "local",
    "static",
    ".git",
    ".idea"
  ]
}
