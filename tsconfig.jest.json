{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "rootDir": "./"
  },
  "include": [
    "*.js",
    "src/**/*",
    "config/*.js"
  ],
  "exclude": [
    "bin",
    "data",
    "dist",
    "temp",
    "specs",
    "local",
    "static",
    "node_modules",
    ".git",
    ".idea"
  ]
}
